<div class="catpicture">
  <%= image_tag "catblanket.png" %>
</div>
<div class="dogpicture">
  <%= image_tag "dog.png" %>
</div>
<div class="row ">
  <div class="small-6 large-6 columns petheaderalign">
    <h1 class="textalign"> Your Pets </h1>
    <div class="newpetlink"><%= link_to 'Add a new Pet!', new_pet_path %></div>
  </div>
  <div class="small-6 large-6 columns">
    <h1 class="textalign"> Upcoming Appointments </h1>
  </div>
</div>
<div class="row">
  <div class="small-6 large-6 columns">
    <table id="pets" class="tableposition">
      <thead>
        <tr>
          <th>Name</th>
          <th>Visits</th>
          <th>Add a Visit</th>
        </tr>
      </thead>
      <tbody>
        <% @pets.each do |pet| %>
          <tr>
            <td><%= pet.name %></td>
            <td><%= link_to 'Visits', pet_visits_path(pet) %></td>
            <td><%= link_to 'Add a Visit', new_pet_visit_path(pet) %></td>
            <td><%= link_to 'Remove Pet', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="small-6 large-6 columns">
    <table id="upcoming" class="tableposition">
      <thead>
        <tr>
          <th>Date</th>
          <th>Visit</th>
          <th>Pet Name</th>
        </tr>
      </thead>
      <tbody>
        <% @upcomingvisits.each do |visit| %>
          <tr>
            <td><%= visit.appointment.to_formatted_s(:long_ordinal) %></td>
            <td><%= link_to "#{visit.name}", pet_visit_path(visit.pet, visit) %></td>
            <td><%= visit.pet.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
